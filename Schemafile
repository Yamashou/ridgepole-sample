create_table "restaurants", force: :cascade do |t|
  t.string   "name" #店名
  t.string   "address"#住所
  t.string   "mail" #メールアドレス
  t.text     "sales" #営業時間に関する内容
  t.string   "att" #属性
  t.text     "information" #説明、詳細内容
  t.datetime "created_at"
  t.datetime "updated_at"
end

create_table "operations", force: :cascade do |t|
  t.integer  "restaurant_id"
  t.boolean  "mon" #休日フラグ
  t.boolean  "tue"
  t.boolean  "wed"
  t.boolean  "thu"
  t.boolean  "fri"
  t.boolean  "sat"
  t.boolean  "sun"
  t.time     "open_time"
  t.time     "end_time"
  t.boolean  "rest_on"
  t.time     "rest_start"
  t.time     "rest_end"
  t.datetime "created_at"
  t.datetime "updated_at"
end
